<!--pages/view/view.wxml-->

<!-- 1.view的基本使用 -->
<view class="box">哈哈哈</view>
<view>
  <text>呵呵呵</text>
  <button>按钮</button>
</view>

<!-- 2.hover-class当用户按下组件时显示的状态 -->
<view class="box1" hover-class="hover-view" hover-stay-time="{{0}}">box1</view>

<!-- 3.阻止祖先元素变化 -->
<view class="box2" hover-class="hover-box2">
  <view class="box1" hover-class="hover-view" hover-stay-time="{{0}}"
  hover-stop-propagation="false">box1</view>
</view>
